{
  "autosave": "on_focus_change",
  "icon_theme": "Material Icon Theme",
  "vim_mode": true,
  "ui_font_size": 18,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light",
    "dark": "Ayu Dark"
  },
  "languages": {
    "Python": {
      "language_servers": ["ty", "!basedpyright", "..."],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "poetry",
          "arguments": [
            "run",
            "black",
            "--stdin-filename",
            "{buffer_path}",
            "-"
          ]
        }
      }
    },
    "Ruby": {
      "language_servers": ["ruby-lsp", "!solargraph", "!rubocop"],
      "formatter": "language_server"
    },
    "HTML+ERB": {
      "language_servers": ["herb", "ruby-lsp"],
      "formatter": {
        "external": {
          "command": "erb-formatter",
          "arguments": ["--stdin-filename", "{buffer_path}"]
        }
      }
    }
  },
  "lsp": {
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false,
          "formatting": true
        },
        "formatter": "standard"
      }
    },
    "basedpyright": {
      "settings": {
        "basedpyright.analysis": {
          "diagnosticMode": "workspace",
          "inlayHints": {
            "callArgumentNames": false
          }
        }
      }
    }
  }
}
